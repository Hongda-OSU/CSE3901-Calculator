<body>
  <div class="container">
    <div class="calculator">
      <div class="calculator_display">0</div>
      <div class="calculator_keys">
        <table>
          <tbody>
            <tr class="row" id="1st_row">
              <td><button class="memory" id="ms">MS</button></td>
              <td><button class="memory" id="mr">MR</button></td>
              <td><button class="memory" id="m+">M+</button></td>
              <td><button class="operator" id="plus">+</button></td>
            </tr>
            <tr class="row" id="2nd_row">
              <td><button class="digit" id="seven">7</button></td>
              <td><button class="digit" id="eight">8</button></td>
              <td><button class="digit" id="nine">9</button></td>
              <td><button class="operator" id="minus">-</button></td>
            </tr>
            <tr class="row" id="3rd_row">
              <td><button class="digit" id="four">4</button></td>
              <td><button class="digit" id="five">5</button></td>
              <td><button class="digit" id="six">6</button></td>
              <td><button class="operator" id="times">&times;</button></td>
            </tr>
            <tr class="row" id="4th_row">
              <td><button class="digit" id="one">1</button></td>
              <td><button class="digit" id="two">2</button></td>
              <td><button class="digit" id="three">3</button></td>
              <td><button class="operator" id="divide">&divide;</button></td>
            </tr>
            <tr class="row" id="5th_row">
              <td><button class="digit" id="zero">0</button></td>
              <td><button class="operator" id="period">.</button></td>
              <td><button class="operator" id="clear">AC</button></td>
              <td><button class="operator" id="result">=</button></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
