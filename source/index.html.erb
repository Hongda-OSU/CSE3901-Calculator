<body>
  <div class="container">
    <div class="calculator">
      <div class="calculator_display">0</div>
      <div class="calculator_keys">
        <table>
          <tbody>
            <tr class="row" id="1st_row">
              <td><button class="memory" name="ms">MS</button></td>
              <td><button class="memory" name="mr">MR</button></td>
              <td><button class="memory" name="m+">M+</button></td>
              <td><button class="operator" name="plus">+</button></td>
            </tr>
            <tr class="row" id="2nd_row">
              <td><button class="digit" name="seven">7</button></td>
              <td><button class="digit" name="eight">8</button></td>
              <td><button class="digit" name="nine">9</button></td>
              <td><button class="operator" name="minus">-</button></td>
            </tr>
            <tr class="row" id="3rd_row">
              <td><button class="digit" name="four">4</button></td>
              <td><button class="digit" name="five">5</button></td>
              <td><button class="digit" name="six">6</button></td>
              <td><button class="operator" name="times">&times;</button></td>
            </tr>
            <tr class="row" id="4th_row">
              <td><button class="digit" name="one">1</button></td>
              <td><button class="digit" name="two">2</button></td>
              <td><button class="digit" name="three">3</button></td>
              <td><button class="operator" name="divide">&divide;</button></td>
            </tr>
            <tr class="row" id="5th_row">
              <td><button class="digit" name="zero">0</button></td>
              <td><button class="operator" name="period">.</button></td>
              <td><button class="operator" name="clear">AC</button></td>
              <td><button class="operator" name="result">=</button></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
